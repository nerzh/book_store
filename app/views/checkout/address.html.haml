.content
  .content-flex
    .checkout.part-book-card
      .checkout-tab.review-text
        %checkout-title CHECKOUT
        %ul.nav.nav-tabs
          %li.active
            %a(href= "address")  Address
          %li
            %a(href= "delivery") Delivery
          %li
            %a(href= "payment")  Payment
          %li
            %a(href= "confirm")  Confirm
          %li
            %a(href= "complete") Complete
      .checkout-content.cart-book
        = form_for @checkout_form, url: wizard_path, method: 'PATCH' do |f|
          .checkout-billing
            = f.text_field :order_billing_address_first_name, placeholder: "First name"
            = f.text_field :order_billing_address_last_name, placeholder: "Last name"
            = f.text_field :order_billing_address_street, placeholder: "Street"
            = f.text_field :order_billing_address_city, placeholder: "City"
            -#= f.collection_select(:billing_country_id, countries, :id, :name, {}, {class: "form-control input-address"})
            -#= f.input :order_billing_country, :label => "Цена"
            = f.text_field :order_billing_address_zip, placeholder: "Zipcode"
            = f.text_field :order_billing_address_phone, placeholder: "Phone"
            = f.submit 'SAVE AND CONTINUE'
          .checkout-shipping
          .checkout-summary